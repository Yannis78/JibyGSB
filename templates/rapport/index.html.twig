{% extends 'base.html.twig' %}

{% block title %}Gestion des rapports de visites{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">
            Gestion des rapports de visites 

        </h1> 
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><h6>Numéro</h6></th>
                    <th><h6>Date de création</h6></th>
                    <th><h6>Motif</h6></th>
                    <th><h6>Bilan</h6></th>
                    <th><h6>Auteur</h6></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {% for rapport in lesrapports %}
                <tr>
                    <td>{{rapport.id}}</td>
                    <td>{{rapport.date | date('d-m-Y')}}</td>
                    <td>{{rapport.bilan}}</td>
                    <td>{{rapport.motif}}</td>
                    <td>
                    {{rapport.author.nom}}
                    {{rapport.author.prenom}}
                    </td>
                    <td>
                        <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="#" class="btn btn-danger" onclick="return confirm(`Voulez vous vraiment supprimer l'article numéro : {{rapport.id}} ?`)"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
