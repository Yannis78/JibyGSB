{% extends 'base.html.twig' %}

{% block title %}Gestion des praticiens{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">
            Gestion des praticiens 
            <a class="btn btn-primary float-right" href="#" role="button"><i class="fas fa-plus"></i> &nbsp;Ajouter un praticien</a>
        </h1> 
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><h6>Numéro</h6></th>
                    <th><h6>Nom</h6></th>
                    <th><h6>Prénom</h6></th>
                    <th><h6></h6></th> 
                </tr>
            </thead>

            <tbody>
                {% for praticien in lespraticiens %}
                <tr>
                    <td>{{praticien.id}}</td>
                    <td>{{praticien.nom}}</td>
                    <td>{{praticien.prenom}}</td>
                    <td class="float-right">
                        <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="#" class="btn btn-danger" onclick="return confirm(`Voulez vous vraiment supprimer l'article numéro : {{praticien.id}} ?`)"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
